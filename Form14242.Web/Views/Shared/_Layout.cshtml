<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/styles/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/styles/jquery-ui-1.8.21.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/scripts/libs/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/scripts/libs/jquery-ui-1.8.21.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/scripts/libs/knockout-2.1.0.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/scripts/libs/modernizr-1.7.min.js")" type="text/javascript"></script>

    @RenderSection("header", false)
</head>

<body>
    <div id="root">
        <div id="header">
            <div id="irs-logo"><img src="http://www.irs.gov/IRS/CDA/Common/Images/irsHomepageLogo.gif" title="Internal Revenue Service United States Department of the Treasury" /></div>
        </div>
        
        <div id="content">
            @RenderBody()
        </div>

    </div>
</body>
</html>
